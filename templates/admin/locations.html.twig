{% extends 'base_admin.html.twig' %}

{% block title %}
    „ROADCHECK“ | Duobių sąrašas
{% endblock %}

{% block body %}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div id="map" style="height: 50vh;"></div>
    <script type="text/javascript">
        var map = new L.Map('map');

        var osmUrl = 'http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png',
            osmAttrib = 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">2022 OpenStreetMap contributors</a>',
            osm = new L.TileLayer(osmUrl, {maxZoom: 19, attribution: osmAttrib});

        var lat = 54.911824;
        var lng = 23.923679;
        var zoom = 13;

        map.setView(new L.LatLng(lat, lng), zoom).addLayer(osm);

        {% if locations|default(null) %}
            {% for loc in locations %}
                var marker = L.marker([{{ loc.lat }}, {{ loc.lng }}]).addTo(map);

                marker.bindPopup("<b>Pranešimo data:</b> <br>{{ loc.created_at|split(".")[0] }}");
            {% endfor %}
        {% endif %}

        var popup = L.popup();

        function onMapClick(e)
        {
            var geocodeService = L.esri.Geocoding.geocodeService({
                apikey: "AAPKfa869c04abca4be7b67082007f71bd03dIOoH9wMrdc1IacMrk1yAWkHTNv9euC84dgU3abrG8E4VDxQdBnz8r_ZN7j8c8Zu"
            });

            geocodeService.reverse().latlng(e.latlng).run((error, result) =>
            {
                if (error) return;

                popup.setLatLng(e.latlng)
                    .setContent("<b>Pasirinkote adresą:</b> <br> " + result.address.LongLabel)
                    .openOn(map);
            });
        }

        map.on('click', onMapClick);

        L.Control.geocoder().addTo(map);
    </script>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">PAŽYMĖTOS DUOBĖS</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Platuma
                        </th>
                        <th>
                            Ilguma
                        </th>
                        <th>
                            Adresas
                        </th>
                        <th>
                            Nuotrauka
                        </th>
                        <th>
                            Peržiūra
                        </th>
                        <th>
                            Redagavimas
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if locations|default(null) %}
                        {% for loc in locations %}
                            <tr>
                                <td class="font-weight-medium">
                                    {{ loc.location_id }}
                                </td>
                                <td>
                                    {{ loc.lat }}
                                </td>
                                </td>
                                <td>
                                    {{ loc.lng }}
                                </td>
                                <td id="address">

                                </td>

                                <script>
                                    var geocodeService = L.esri.Geocoding.geocodeService({
                                        apikey: "{{ geocode_api_key }}"
                                    });

                                    var latLng = L.latLng({{ loc.lat }}, {{ loc.lng }});

                                    var address;

                                    geocodeService.reverse().latlng(latLng).run(function (error, result) {
                                        if (error) {
                                            return;
                                        }

                                        var el = document.getElementById("address");
                                        console.log(result);

                                        el.innerHTML = result.address.LongLabel;
                                        el.id = "";
                                    });
                                </script>

                                <td>
                                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#previewImage_{{ loc.location_id }}">
                                        Peržiūrėti nuotrauką
                                    </button>
                                </td>

                                <td>
{#                                    <a class="small-text" href="/map/pan/{{ loc.lat }}/{{ loc.lng }}" target="_blank">#}
{#                                        Peržiūrėti žemėlapyje#}
{#                                    </a>#}
                                    <a class="small-text" onclick="map.setView(new L.LatLng({{ loc.lat }}, {{ loc.lng }}), 17);">
                                        Peržiūrėti žemėlapyje
                                    </a>
                                </td>

                                <td>
                                    <a class="small-text" href="/admin/edit/location/{{ loc.location_id }}" target="_blank">
                                        Redaguoti
                                    </a>
                                </td>
                            </tr>

                            <div class="modal fade" id="previewImage_{{ loc.location_id }}" tabindex="-1" aria-labelledby="label_{{ loc.location_id }}" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="label_{{ loc.location_id }}">Nuotraukos peržiūra</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <a id="image">

                                            </a>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Uždaryti</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <script>
                                var imgEl = document.getElementById("image");

                                var img = new Image();

                                img.src = "http://127.0.0.1:8000/api/v1/getimage/1.png";

                                img.style.width = "100%";

                                imgEl.appendChild(img);
                                imgEl.id = "";
                            </script>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
{% endblock %}


{% block navigation %}
    {{ parent() }}
{% endblock %}

